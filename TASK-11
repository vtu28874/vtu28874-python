      "source": [
        "# Program:\n",
        "from tkinter import *\n",
        "from tkinter import messagebox\n",
        "\n",
        "# Define the function for the button command\n",
        "def show():\n",
        "    # Show an info message box when the button is clicked\n",
        "    # It fetches the text from the Entry widgets n and r\n",
        "    messagebox.showinfo('Info', f'Name: {n.get()}, Roll: {r.get()}')\n",
        "\n",
        "# 1. Initialize the main window (root)\n",
        "root = Tk()\n",
        "root.title('Form')\n",
        "\n",
        "# 2. Add 'Name' Label and Entry\n",
        "# Label for 'Name'\n",
        "label = Label(root, text = 'Name').pack()\n",
        "# Entry widget for 'Name'\n",
        "n = Entry(root)\n",
        "n.pack()\n",
        "\n",
        "# 3. Add 'Roll' Label and Entry\n",
        "# Label for 'Roll'\n",
        "label = Label(root, text = 'Roll').pack(pady=5) # Added pady for spacing\n",
        "# Entry widget for 'Roll'\n",
        "r = Entry(root)\n",
        "r.pack()\n",
        "\n",
        "# 4. Add the 'Submit' Button\n",
        "# Button with the 'show' command\n",
        "Button(root, text='Submit', command=show).pack(pady=5)\n",
        "\n",
        "# 5. Start the main event loop\n",
        "root.mainloop()"
      ]
